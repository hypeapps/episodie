<resources>

    <!-- Base application theme. -->
    <style name="BaseEpisodieTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:buttonStyle">@style/EpisodieTheme.Button</item>
    </style>

    <style name="EpisodieTheme" parent="BaseEpisodieTheme">
        <!--<item name="android:navigationBarColor">#20000000</item>-->
        <!--&lt;!&ndash;<item name="android:navigationBarColor">@android:color/transparent</item>&ndash;&gt;-->
        <!--<item name="android:windowTranslucentStatus">false</item>-->
        <!--<item name="android:statusBarColor">#30000000</item>-->
        <!--&lt;!&ndash;<item name="android:windowTranslucentNavigation">true</item>&ndash;&gt;-->
        <!--&lt;!&ndash;<item name="android:windowDrawsSystemBarBackgrounds">true</item>&ndash;&gt;-->
    </style>

    <style name="EpisodieTheme.TvShowDetailsActivityTheme" parent="EpisodieTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="EpisodieTheme.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="EpisodieTheme.Toolbar" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="EpisodieTheme.Toolbar.Transparent" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:background">@null</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="EpisodieTheme.FabButton" parent="EpisodieTheme.V0.FabButton"/>
    <style name="EpisodieTheme.V0.FabButton" parent="@style/Widget.Design.FloatingActionButton">
        <item name="fabSize">normal</item>
        <item name="borderWidth">@dimen/border_width_fab_button</item>
    </style>

    <style name="EpisodieTheme.TopListAppBar" parent="EpisodieTheme.V0.TopListAppBar" />
    <style name="EpisodieTheme.V0.TopListAppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_height">300dp</item>
    </style>

    <style name="EpisodieTheme.CustomFontTabLayout" parent="EpisodieTheme.V0.CustomFontTabLayout" />

    <style name="EpisodieTheme.V0.CustomFontTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">@dimen/height_tab_indicator</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="EpisodieTheme.ImageViewCover" parent="ImageViewCoverV0" />

    <style name="ImageViewCoverV0" />

    <style name="EpisodieTheme.TextViewTitle" parent="EpisodieTheme.V0.TextViewTitle" />

    <style name="EpisodieTheme.V0.TextViewTitle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EpisodieTheme.RippleView">
        <item name="rv_rippleDuration">150</item>
        <item name="rv_color">@color/primary</item>
    </style>

    <style name="EpisodieTheme.TvShowDetailsAppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="EpisodieTheme.AlertDialog">
        <item name="android:textColor">#ff0000</item>
    </style>

</resources>
